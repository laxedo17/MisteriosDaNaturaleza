@model MisteriosDaNaturaleza.Modelos.ViewModelos.PedidoViewModel
@using MisteriosDaNatureza.Utilidades

@{ ViewData["Title"] = "Detalles";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<form method="post">
    @if (Model.DetallesPedido.Count() > 0)
    {
<br />
                <div class="backgroundWhite container">
                    <div class="card">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-12 d-none d-md-block col-md-6 pb-1">
                                <i class="fas fa-shopping-cart"></i> &nbsp; Resumen do Pedido
                            </div>
                            <div class="col-12 col-md-4 offset-md-2 text-right">
                                <a asp-action="Index" asp-controller="Pedido" asp-area="Admin" class="btn btn-outline-info form-control btn-sm">Volver a Pedidos</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="container rounded p-2">
                                <div class="row">
                                    <div class="col-12 col-lg-6 pb-4">
                                        <div class="row">
                                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                                <span class="text-primary">Detalles de recollida:</span>
                                            </h4>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Nome</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="CabeceiraPedido.Nome" id="txtNome" readonly type="text" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Numero de Telefono</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="CabeceiraPedido.Telefono" id="txtTelefono" readonly type="text" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Direccion</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="CabeceiraPedido.Direccion" type="text" readonly class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Poblacion</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="CabeceiraPedido.Poblacion" type="text" readonly class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Codigo Postal</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="CabeceiraPedido.CP" type="text" readonly class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Email</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="CabeceiraPedido.Email" type="text" readonly class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-5 offset-lg-1">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-primary">Resumen de pedido</span>
                                        </h4>
                                        <ul class="list-group mb-3">
                                            @{ var total = 0.0;}

                                            @foreach (var detalles in Model.DetallesPedido)
                                            {
                            <li class="list-group-item d-flex justify-content-between">
                                <div>
                                    <input type="hidden" asp-for="@detalles.Id" />
                                    <h6 class="my-0">@detalles.NomeServicio</h6>
                                    <small class="text-muted">Precio : @detalles.Precio</small>
                                </div>

                            </li>}



                                        </ul>
                                        @if (Model.CabeceiraPedido.Estado != DE.EstadoEnviado)
                                        {
                        <div class="col-12">
                            <button class="btn btn-outline-success disabled form-control" disabled>@Model.CabeceiraPedido.Estado</button>
                        </div>}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                @if (Model.CabeceiraPedido.Estado != DE.EstadoAprobado && Model.CabeceiraPedido.Estado != DE.EstadoRexeitado)
                                {
                <div class="col-6 offset-md-4 col-md-4 col-lg-2 offset-lg-8">
                    <a asp-action="Aceptar" asp-route-id="@Model.CabeceiraPedido.Id" class="btn btn-success form-control">Aprobar pedido</a>
                </div>
                                    <div class="col-6 col-md-4 col-lg-2">
                                        <a asp-action="Rexeitar" asp-route-id="@Model.CabeceiraPedido.Id" class="btn btn-danger form-control">Rexeitar</a>
                                    </div>}
                            </div>
                        </div>
                    </div>
                </div> }
                            else
                            {
                <div class="backgroundWhite"> Non hai articulos no carro da compra...</div>}
</form>


