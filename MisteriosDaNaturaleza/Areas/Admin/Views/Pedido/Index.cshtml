@using MisteriosDaNatureza.Utilidades

@{ var estado = Context.Request.Query["estado"];

    var aceptados = "text-primary";
    var pendientes = "text-primary";
    var todos = "text-primary";

    if (estado == "aceptados")
    {
        aceptados = "active text-white";
    }
    else
    {
        if (estado == "pendientes")
        {
            pendientes = "active text-white";
        }
        else
        {
            todos = "active text-white";
        }
    } }



<div class="border backgroundWhite p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Lista de pedidos</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none" asp-controller="Pedido" asp-route-estado="pendientes" asp-action="Index">
                    <li class="list-group-item @pendientes">Pendientes</li>
                </a>
                <a style="text-decoration:none" asp-controller="Pedido" asp-route-estado="aceptados" asp-action="Index">
                    <li class="list-group-item @aceptados">Aceptados</li>
                </a>
                <a style="text-decoration:none" asp-controller="Pedido" asp-route-estado="todos" asp-action="Index">
                    <li class="list-group-item @todos">Todos</li>
                </a>
            </ul>
        </div>
    </div>

    <br /><br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Conta</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>


</div>

@section Scripts{
    <script src="~/js/pedidos.js"></script>
}