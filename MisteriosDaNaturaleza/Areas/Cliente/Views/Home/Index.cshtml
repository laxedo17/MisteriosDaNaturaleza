@model MisteriosDaNaturaleza.Modelos.ViewModelos.InicioViewModel

@foreach (var categoria in Model.ListaCategorias.OrderBy(o => o.OrdeDeExposicion))
{
@if (Model.ListaDestinos.Where(c => c.CategoriaId == categoria.Id).Count() > 0)
{
<div class="row container pb-3 backgroundWhite">
    <div class="col-12">
        <div class="row">
            <h2 class="text-success"><b>@categoria.Nome</b></h2>

            <div class="col-12">
                <div class="row my-3">
                    @foreach (var destino in Model.ListaDestinos.Where(c => c.CategoriaId == categoria.Id))
                    {
<div class="col-lg-4 col-xl-3 col-md-6 pb-4">
    <div class="card" style="border:2px solid #43ac6a;border-radius:5px; background:url('/imaxes/leaves.png')">
        <div class="pl-3 pt-1 text-center">
            <h3 class="card-title text-primary"><b>@destino.Nome</b></h3>
        </div>
        <div class="d-flex justify-content-between ">
            <div class="pl-1 text-muted">Precio por destino</div>
            <div class="pr-1 text-danger h5">@destino.Precio €</div>
        </div>
        <img src="@destino.ImaxeUrl" class="card-img-top p-2 rounded" />

        <div class="text-muted text-center pb-2">@destino.Frecuencia.Nome</div>
        <a asp-action="Detalles" class="btn btn-success" style="border-radius:2px;" asp-route-id="@destino.Id">Detalles</a>
    </div>
</div>}
                </div>
            </div>
        </div>
    </div>
</div>}}